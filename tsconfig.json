{
  "compilerOptions": {
    "baseUrl": "./src",
    "incremental": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    // "strict": true,
    // "skipLibCheck": true,
    "sourceMap": true,
    // "strictNullChecks": true,
    "paths": { "*": ["node_modules/*"], "@types/*": ["./types/*"] },
    "typeRoots": ["./types/*", "@types"],
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules"]
}
